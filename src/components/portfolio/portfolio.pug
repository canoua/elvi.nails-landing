mixin portfolio 
  section.portfolio 
    .container 
      .portfolio-inner 
        h3.title-3.portfolio__title Мои работы
        .slider  
          .swiper.mySwiper
            .swiper-wrapper
              .swiper-slide.slide 
                img(src=require('./images/portfolio/1.jpg') alt="photo-1")
              .swiper-slide.slide 
                img(src=require('./images/portfolio/2.jpg') alt="photo-2")
              .swiper-slide.slide 
                img(src=require('./images/portfolio/3.jpg') alt="photo-3")
              .swiper-slide.slide 
                img(src=require('./images/portfolio/4.jpg') alt="photo-4")
              .swiper-slide.slide 
                img(src=require('./images/portfolio/5.jpg') alt="photo-5")
              .swiper-slide.slide 
                img(src=require('./images/portfolio/6.jpg') alt="photo-6")
            .swiper-pagination
  